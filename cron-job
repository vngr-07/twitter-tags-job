name: Cron Job

on:
  schedule:
    - cron: "0 12 * * *" # roda todo dia às 12:00 UTC
  workflow_dispatch: # permite rodar manualmente também

jobs:
  run-script:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"
      - name: Run Script
        run: python meu_script.py
